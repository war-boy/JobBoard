@model IEnumerable<JobBoard.DATA.EF.Application>

@{
    ViewBag.Title = "Your Applications";
}

@section head{
<section class="breadcrumbs">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h2>@ViewBag.Title</h2>
        </div>
    </div>
</section>
}


<table class="table display" id="table_id">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.ApplicationDate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.OpenPosition.Position.Title)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ApplicationStatu.StatusName)
            </th>

        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationDate)
                </td>

                <td>
                    <a href="@Url.Action("Details", "OpenPositions", new { id = item.OpenPositionId})">
                        @Html.DisplayFor(modelItem => item.OpenPosition.Position.Title) - #@Html.DisplayFor(modelItem => item.OpenPositionId)
                    </a>

                </td>

                <td title="@item.ApplicationStatu.StatusDescription">
                    @Html.DisplayFor(modelItem => item.ApplicationStatu.StatusName)
                </td>
            </tr>
        </tbody>
    }

</table>

@section Scripts {
    <script src="//cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
    </script>
}
