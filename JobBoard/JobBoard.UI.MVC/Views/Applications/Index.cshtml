@using Microsoft.AspNet.Identity;
@using JobBoard.DATA.EF;
@model IEnumerable<JobBoard.DATA.EF.Application>

@{
    ViewBag.Title = "Applications";
}

@section head{
    <section class="breadcrumbs">
        <div class="container offset-1">
            <div class="d-flex justify-content-between align-items-center">
                <h2>@ViewBag.Title</h2>
            </div>
        </div>
    </section>
}

<table class="table display" id="table_id">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserDetail.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpenPosition.Position.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationStatu.StatusName)
            </th>
            <th></th>
        </tr>
    </thead>

    <!-- #region Get current user -->
    @{
        JobBoardEntities db = new JobBoardEntities();

        string userID = User.Identity.GetUserId();

        UserDetail currentUser = db.UserDetails.Where(ud => ud.UserId == userID).FirstOrDefault();
    }
    <!-- #endregion -->

    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationDate)
                </td>
                <td>
                    <a href="@Url.Action("Details", "UserDetails", new { id = item.UserId })">
                        @Html.DisplayFor(modelItem => item.UserDetail.FullName)
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("Details", "OpenPositions", new { id = item.OpenPositionId, userId = currentUser.UserId })">
                        @Html.DisplayNameFor(model => model.OpenPosition.Position.Title)- #@Html.DisplayFor(modelItem => item.OpenPosition.OpenPositionId)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationStatu.StatusName)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.ApplicationId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ApplicationId })
                </td>
            </tr>
        </tbody>
    }

</table>

@section Scripts {
    <script src="//cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
    </script>
}
