    <script>
        $('#responsive-nav li a').each(function () {
            if ($(this).attr('href') == window.location.pathname) {
                $(this).addClass('active');
            }
        });

    </script>

    <script>
        $(function () {
            $("#dialog").dialog({
                autoOpen: false,
                show: {
                    effect: "fade",
                    duration: 900
                },
                hide: {
                    effect: "fade",
                    duration: 900
                }

            });

            $("#delete-btn").on("click", function () {
                $("#dialog").dialog("open");
            });
        });
    </script>

